extends ../layouts/common.pug

block content
    h1
        span.m-3 User
        a.btn.btn-primary(href="/users/create") New 
    
    .d-flex.align-items-center.justify-content-end
        form(action="/users/search", method="GET" class="form-group d-flex ")
            input(type="text" name ="q" class="form-control")
            button(class="btn btn-primary", style="margin-left: 10px") Search
    
    table.table
        tr
            th Avatar
            th Name 
            th Phone
            th Action
        each user in users 
            tr
                td
                    img(src=user.avatar width="25px" heigh="30px")
                td= user.name
                td= user.phone
                td
                    a.btn.btn-primary(href="/users/" + user.id) View