extends ../layouts/common.pug

block content 
    .container
        h1 Create User 

        if errors
            each error in errors 
                .alert.alert-danger=error

        form(action="/users/create", method="POST")
            .form-group
                label(for="email") Email 
                input#email.form-control(type="text", name="emial" value=values ? values.email : "")
            .form-group
                label(for="name") Name 
                input#name.form-control(type="text", name="name" value=values ? values.name : "")
            .form-group
                label(for="phone") Phone 
                input#phone.form-control(type="text", name="phone" value=values ? values.phone : "")
            .form-group
                label(for="password") Password 
                input#password.form-control(type="password", name="password" value=values ? values.password : "")
            
            button.btn.btn-primary Create 
    