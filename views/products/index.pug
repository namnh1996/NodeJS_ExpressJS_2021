extends ../layouts/common.pug

block content
    h1 Product
    .d-flex.align-items-center
        form.ml-auto(action="/products/search", method="GET" class="d-flex")
            input(type="text" name="q" class="form-control")
            button(class="btn btn btn-primary ml-2") Search
    .row
        each product in products
            .col-4
                .card(style='width: 100%;')
                img.card-img-top(src= product.image)
                .card-body
                    h5.card-title=product.name
                    p.card-text=product.descripttion
                    a.btn.btn-primary(href='#') Add to cart
    .d-flex.justify-content-center
        nav
            ul.pagination
                li.page-item
                    a.page-link(href='#') Previous
                li.page-item
                    a.page-link(href='/products?page=1') 1
                li.page-item
                    a.page-link(href='/products?page=2') 2
                li.page-item    
                    a.page-link(href='/products?page=3') 3
                li.page-item
                    a.page-link(href='#') Next